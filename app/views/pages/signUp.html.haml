%h1 Welcome to bookies !
%form{"ng-controller"=>"userController"}
  %input{"placeholder"=>"first name", "name"=>"firstName", "type"=>"text", "ng-model"=>"user.first_name"}
  %input{"placeholder"=>"last name", "name"=>"lastName", "type"=>"text", "ng-model"=>"user.last_name"}
  %input{"placeholder"=>"username", "name"=>"username", "type"=>"text", "ng-model"=>"user.user_name"}
  %input{"placeholder"=>"password", "name"=>"password", "type"=>"password"}
  %input{"value"=>"Sign Up","type"=>"submit","ng-click"=>"log_user(user)"}
