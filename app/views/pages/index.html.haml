%html{"ng-app" => "bookies", "class"=>"ng-cloak"}
  %head
    %title bookies
    = stylesheet_link_tag 'http://codeorigin.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css', 'application', media: 'all'
